<div class="modal fade" id="new-subscription-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="row">
          <div class="col-md-8">
            <h5 class="modal-title"><%= reminders_button_text %></h5>
          </div>
          <div class="col-md-4 push-right">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
      </div>
      <div class="modal-body">
        <%= render "/subscriptions/form", subscription: current_subscription %>

        <%= button_to "Delete Subsription",
                      admin_dashboard_subscription_path(current_subscription),
                      method: :delete,
                      class: "btn btn-danger" if current_subscription.persisted? %>
      </div>
      
    </div>
  </div>
</div>