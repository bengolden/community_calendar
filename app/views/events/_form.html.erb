<div class="event-form">
  <%= simple_form_for @event do |f| %>
    <h4>Event Overview</h4>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= content_tag :div, nil, id: "default_times", data: { starts_at: @event.starts_at, ends_at: @event.ends_at } %>
    <label>Start time</label>
    <%= f.text_field :starts_at,
        data: { provide:'datepicker' } %>
    <label>End time</label>
    <%= f.text_field :ends_at,
        data: { provide:'datepicker' } %>

    <h4>Venue Details</h4>
    <%= f.input :venue_name %>
    <%= f.input :venue_address %>
    <%= f.input :venue_url, as: :string %>

    <h4>Sponsor Organization</h4>
    <%= f.input :sponsor_name %>
    <%= f.input :sponsor_url, as: :string %>
    <%= f.input :contact_name %>
    <%= f.input :contact_email, as: :string %>

    <h4>Ticket Information</h4>
    <%= f.input :tickets_price %>
    <%= f.input :tickets_details %>
    <%= f.input :tickets_url, as: :string %>

    <div>
      <%= f.submit nil, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>